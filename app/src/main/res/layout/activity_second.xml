<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Declares a button that opens a third activity-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open third activity"
        android:id="@+id/start_activity"
        android:onClick="btnStartActivityClicked"/>

    <!-- Declares a button that opens a camera-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN CAMERA"
        android:id="@+id/open_browser"
        android:onClick="btnOpenBrowserClicked"/>


</LinearLayout>

